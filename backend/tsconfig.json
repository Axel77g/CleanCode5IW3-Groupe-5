{
  "compilerOptions": {
    "baseUrl" : "./src",
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
        "@domain/*": ["domain/*"],
        "@infrastructure/*": ["infrastructure/*"],
        "@application/*": ["application/*"],
        "@shared/*": ["shared/*"],
        "@expressApp/*": ["infrastructure/frameworks/express/*"],
        "@infrastructureCore/*": ["infrastructure/frameworks/core/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules","src/infrastructure/frameworks/nextjs"]
}